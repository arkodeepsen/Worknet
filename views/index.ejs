  <script>
    // Check if userId is stored in sessionStorage or localStorage
    const sessionUserId = sessionStorage.getItem('userId');
    const localUserId = localStorage.getItem('userId');

    // Log the current status of userId
    console.log('Current userId from sessionStorage:', sessionUserId);
    console.log('Current userId from localStorage:', localUserId);

    // Use userId from sessionStorage first, fallback to localStorage
    let userId = sessionUserId || localUserId;

    // If userId is 'null' or missing, treat it as logged out
    if (userId === 'null' || !userId) {
        userId = null;
    }

    console.log('Final userId used for logic:', userId);

    // DOM manipulation on page load
    window.onload = function () {
      const loginButton = document.querySelector('.submit-btn');
      const mainBodyButton = document.querySelector('.cn');
      const navbarHome = document.querySelector('.list-1 h3');

      if (userId) {  // Check if userId exists and is valid
        console.log('User is logged in with userId:', userId);

        // Change login button to logout
        loginButton.textContent = "Logout";
        loginButton.onclick = function() {
          // Clear userId from both sessionStorage and localStorage to simulate logout
          sessionStorage.removeItem('userId');
          localStorage.removeItem('userId');
          window.location.reload();  // Refresh the page to reflect logged-out state
        };

        // Change Sign-up button to Dashboard button
        mainBodyButton.innerHTML = "<h2>Dashboard</h2>";
        mainBodyButton.parentNode.href = "/dashboard";

        // Change Home to Job Portal in the navbar
        navbarHome.innerHTML = '<i class="fa fa-briefcase"></i> Job Portal';
        navbarHome.parentNode.onclick = function() {
          window.location.href = "/main";
        };
      } else {
        console.log('User is not logged in. userId is missing or null.');
        // Set login button functionality to redirect to sign-in page
        loginButton.textContent = "Login / Sign-up";
        loginButton.onclick = function() {
          window.location.href = "/signin";
        };
        // Reset Sign-up button and Home button for logged-out state
        mainBodyButton.innerHTML = "<h2>Sign Up</h2>";
        mainBodyButton.parentNode.href = "/signup";

        navbarHome.innerHTML = '<i class="fa fa-home"></i> Home';
        navbarHome.parentNode.onclick = function() {
          window.location.href = "/home";
        };
      }
    };
</script>
